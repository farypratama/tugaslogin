<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="id.ac.uinsgd.tugaslogin.LoginActivity">


    <EditText
        android:id="@+id/txt_username"
        android:hint="Username"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background_normal"
        android:layout_marginTop="148dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/txt_password"
        android:hint="Password"
        android:inputType="textPassword"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background_normal"
        android:layout_below="@+id/txt_username"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="181dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:id="@+id/btn_login"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/btn_register" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SELAMAT DATANG"
        android:id="@+id/textView"
        android:layout_alignBottom="@+id/txt_username"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:textSize="30dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/btn_register"
        android:layout_below="@+id/txt_password"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginEnd="35dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign in with Google"
        android:id="@+id/btn_google"
        android:layout_below="@+id/btn_login"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:onClick="LoginGoogle"
        android:background="#ff0008" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign in with Facebook"
        android:id="@+id/btn_facebook"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn_google"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:onClick="LoginFacebook"
        android:background="#001aff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign in with Twitter"
        android:id="@+id/btn_twitter"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn_facebook"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:onClick="LoginTwitter"
        android:background="#2d9dff" />

</RelativeLayout>
